<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".activity.MainActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraintLayout_under"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:background="#F5F5F5"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <TextView
            android:id="@+id/textHome"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:background="#F5F5F5"
            android:text="Home"
            android:drawableTop="@drawable/ic_baseline_home_24"
            android:layout_marginTop="18dp"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout_under"
            app:layout_constraintEnd_toStartOf="@id/testSetting"
            app:layout_constraintStart_toStartOf="@id/constraintLayout_under"
            app:layout_constraintTop_toTopOf="@id/constraintLayout_under"
            app:layout_constraintVertical_bias="1.0" />

        <TextView
            android:id="@+id/testSetting"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:drawableTint="#111"
            android:text="Sitting"
            android:layout_marginTop="18dp"
            android:textColor="#111"
            android:textSize="16sp"
            android:drawableTop="@drawable/ic_baseline_settings_24"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout_under"
            app:layout_constraintEnd_toStartOf="@id/textChart"
            app:layout_constraintStart_toEndOf="@id/textHome"
            app:layout_constraintTop_toTopOf="@id/constraintLayout_under" />

        <TextView
            android:id="@+id/textChart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="Chart"
            android:textColor="#111"
            android:textSize="16sp"
            android:drawableTint="#111"
            android:layout_marginTop="18dp"
            android:drawableTop="@drawable/ic_baseline_chat_24"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout_under"
            app:layout_constraintEnd_toStartOf="@id/textCart"
            app:layout_constraintStart_toEndOf="@id/testSetting"
            app:layout_constraintTop_toTopOf="@id/constraintLayout_under" />

        <!--        <ImageView-->
        <!--            android:id="@+id/imageSearch"-->
        <!--            android:layout_width="wrap_content"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_marginStart="8dp"-->
        <!--            android:layout_marginEnd="8dp"-->
        <!--            android:layout_marginBottom="32dp"-->
        <!--            app:layout_constraintBottom_toBottomOf="parent"-->
        <!--            app:layout_constraintEnd_toEndOf="parent"-->
        <!--            app:layout_constraintStart_toStartOf="parent"-->
        <!--            android:src="@drawable/ic_search" />-->

        <TextView
            android:id="@+id/textCart"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="Cart"
            android:layout_marginTop="18dp"
            android:textColor="#111"
            android:drawableTop="@drawable/ic_baseline_shopping_cart_24"
            android:textSize="16sp"
            android:drawableTint="#111"
            app:layout_constraintBottom_toBottomOf="@id/constraintLayout_under"
            app:layout_constraintEnd_toEndOf="@id/constraintLayout_under"
            app:layout_constraintStart_toEndOf="@id/textChart"
            app:layout_constraintTop_toTopOf="@id/constraintLayout_under" />
    </androidx.constraintlayout.widget.ConstraintLayout>


    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@id/constraintLayout_under"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        />


</androidx.constraintlayout.widget.ConstraintLayout>